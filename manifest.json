{
  "name": "Streaming Skipper",
  "description": "Easily configurable auto skip intro, recap, ads on video streaming services. Supports Netflix, PrimeVideo, Disney+.",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/icons/16x16.png",
      "32": "src/icons/32x32.png",
      "48": "src/icons/48x48.png",
      "128": "src/icons/128x128.png"
    }
  },
  "icons": {
    "16": "src/icons/16x16.png",
    "32": "src/icons/32x32.png",
    "48": "src/icons/48x48.png",
    "128": "src/icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["dist/netflix_skipper.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.primevideo.com/*"],
      "js": ["dist/primevideo_skipper.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.disneyplus.com/*"],
      "js": ["dist/disneyplus_skipper.js"],
      "run_at": "document_end"
    }
  ]
}
